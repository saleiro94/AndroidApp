<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NovoPonto">

    <EditText
        android:id="@+id/pontoproblema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Problema"
        app:layout_constraintBottom_toTopOf="@+id/Novoponto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.223" />

    <Button
        android:id="@+id/Novoponto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AdicionarPonto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.911" />

    <RadioGroup
        android:layout_width="125dp"
        android:layout_height="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/AcidenteN"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:text="@string/acidentes" />

        <RadioButton
            android:id="@+id/obrasN"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="@string/obras" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>